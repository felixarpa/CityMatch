<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.citymatch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Presentation.SplashController"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDXC8_Mk-Qd0JHm7U7zcKMUMdv4S5I3UXY" />

        <activity
            android:name=".Presentation.LoginViewController"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Presentation.MatcherViewController"
            android:screenOrientation="portrait" />
        <activity android:name=".Presentation.RegisterViewController"
            android:screenOrientation="portrait" />

        <activity android:name=".Presentation.MatchListViewController"
            android:screenOrientation="portrait"/>
    </application>

</manifest>